<html>
	<head>
		<title><%=song.title%></title>
		<link rel="stylesheet" href="/css/materialize.css">
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="col s6">
					<h2><%=song.title%></h2>
				</div>
				<div class="col s3 offset-s3">
					<div class="section">
						<a href="/">Back to dashboard</a>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col s10">
					<h4>Artist: </h4>
					<p><%=song.artist%></p>
					<h4>Album: </h4>
					<p><%=song.album%></p>
					<h4>Genre: </h4>
					<p><%=song.genre%></p>
				</div>
			</div>
			<div class="row">
				<div class="col s2">
					<div class="section">
						<a href=<%='/songs/'+song._id+'/edit'%>>Edit Song</a>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>